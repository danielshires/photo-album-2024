---
import Layout from '../layouts/Layout.astro';
import Image from 'astro/components/Image.astro';
import { getCollection } from 'astro:content';
const albums = await getCollection('albums');
console.log(albums);
---

<Layout pageTitle='Collections'>
	<div class='grid gap-4 grid-cols-2 md:grid-cols-4 lg:grid-cols-6'>
		{
			albums.map((item) => (
				<a href={`/gallery/${item.id}`} class='group transition-all mb-4 block'>
					<Image
						src={item.data.cover}
						alt={item.data.title}
						format='avif'
						width={720}
						quality='mid'
						class:list={[
							'rounded-md transition-all',
							'group-hover:shadow-lg group-hover:opacity-90',
						]}
					/>
					<div class='mt-2 text-neutral-700'>
						<strong class='font-normal'>{item.data.title}</strong>
					</div>
				</a>
			))
		}
	</div>
</Layout>
