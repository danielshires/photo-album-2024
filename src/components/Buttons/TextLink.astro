---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);

interface Props {
	path: string;
	target: string;
	href: string;
}

const { href, path, target } = Astro.props;

const styles =
	currentPath === path
		? 'underline underline-offset-4'
		: 'underline underline-offset-4 hover:text-purple-800';
---

<a class={styles} href={href} target={target}><slot/></a>
